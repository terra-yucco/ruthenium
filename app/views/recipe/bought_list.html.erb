<div class="container-narrow">
  <div class="masthead">
    <h3 class="site_title">
      <%= link_to image_tag('logo.png', { :border => '0', :alt => 'Buy It!'}), '/' %>
    </h3>
  </div>

  <div class="cooking_title">
    <h3 id="title"><a href="<%= @menu['recipeUrl'] %>"><%= @menu['recipeTitle'] %></a></h3>
  </div>
  <div class="row-fluid marketing">
    <hr>
    <h4><strong>買ったものリスト</strong></h4>
    <table class="table table-striped">
        <% @materials.each do |material| %>
        <tr>
          <td>
            <input type="checkbox">
          </td>
          <td>
            <%= "#{material[0]['materialName']}" %>
          </td>
          <td>
            <%= "#{material[0]['materialAmount']}" %>
          </td>
        </tr>
        <% end %>
    </table>    
    <hr>      
    <p>
      <a href="<%= @menu['recipeUrl'] %>">楽天レシピのサイトへ</a>
    </p>  
  </div>

  <hr>
  <div class="footer">
    <p>&copy;AIIT enPiT 2016 Ruthenium</p>
  </div>   
</div> <!-- /container -->
